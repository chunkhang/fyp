# Page
GET   /                   controllers.PageController.index
GET   /login              controllers.PageController.login

# Authentication
GET   /logon              controllers.AuthenticationController.logon
GET   /auth               controllers.AuthenticationController.authenticate
GET   /logout             controllers.AuthenticationController.logout

# User
GET   /users              controllers.UserController.index
GET   /users/new          controllers.UserController.newUser
POST  /users              controllers.UserController.createUser

# Assets
GET   /assets/*file       controllers.Assets.versioned(path="/public", file: Asset)
